# Database - Use local MongoDB or MongoDB Atlas
MONGODB_URI=mongodb://localhost:27017/authapp

# JWT Authentication - Generate secure random strings
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_characters_long
CSRF_SECRET=your_csrf_secret_32_characters_minimum_for_security

# NextAuth Configuration  
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_minimum_32_characters_long

# Email Configuration (pentru password reset)
EMAIL_FROM=noreply@yourdomain.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password

# reCAPTCHA (optional pentru forms)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# File Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Optional: Admin Setup
ADMIN_EMAIL=admin@yourdomain.com

# Environment
NODE_ENV=development
